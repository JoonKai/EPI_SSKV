/*##########################################################MDI UI 스타일##################################################*/ 
QMdiSubWindow {
    background: #d8dad8;
    border: 1px solid #000000;
}

/* 타이틀 영역 */
QMdiSubWindow::title {
    background: #ffffff;
    font-size: 13px;
    color: #000000;
    height: 28px;
    border: 1px solid #000000;
    padding-left: -3;
    padding-right: -13;
}

/* 창 버튼 */
QMdiSubWindow::close-button,
QMdiSubWindow::minimize-button,
QMdiSubWindow::normal-button,
QMdiSubWindow::maximize-button {
    background: transparent;
    border: none;
    width: 20px; height: 18px;
    /* margin: 0px 10px 10px 0px; */
    /* border-radius: 4px; */
}
QMdiSubWindow::close-button:hover      { background: #000000; }
QMdiSubWindow::maximize-button:hover  { background: #000000; } 
QMdiSubWindow::normal-button:hover     { background: #000000; }
QMdiSubWindow::minimize-button:hover   { background: #000000; } 

