/*##########################################################테이블 스타일##################################################*/ 
QTableWidget { 
    background-color: #2b2b2b; 
    color: #f0f0f0; 
    gridline-color: #3c3c3c; 
    selection-background-color: #555555; 
    /* ✅ 드래그 선택 시 어두운 그레이 */ 
    selection-color: #ffffff; 
    border: 1px solid #3c3c3c; 
    font-size: 13px; 
    alternate-background-color: #353535; 
} 
QHeaderView::section { 
    background-color: #3c3f41; 
    color: #f0f0f0; padding: 5px; 
    border: 1px solid #444444; 
    font-weight: bold; 
} 
QTableWidget::item { 
    border: none; padding: 1px; 
} 
QTableWidget::item:selected { 
    background-color: #555555; 
    /* ✅ 선택 시 어두운 그레이 */ 
    color: white; 
} 
QTableCornerButton::section { 
    background-color: #3c3f41; 
    border: 1px solid #444444; 
} 
/*------------------------------------------------------------------------------------------------------------------------*/ 


/*##########################################################탭컨트롤 스타일##################################################*/ 
/* 탭 전체 배경 */ 
QTabWidget::pane { 
    border: 1px solid #000000; 
    /* 변경됨 */ 
    background: #2e2e2e; 
} 
/* 탭 바 배경 */ 
QTabBar { 
    background-color: #2b2b2b; 
} 
/* 탭 항목 (기본 상태) */ 
QTabBar::tab { 
    background: rgb(27, 27, 27); 
    color: #ccc; padding: 3px 8px; 
    border: 1px solid #000000; 
    /* 변경됨 */ 
    border-bottom: none; 
    border-top-left-radius: 0px; 
    border-top-right-radius: 0px; 
    margin-right: 0px; 
} 
/* 탭 항목 (선택된 상태) */ 
QTabBar::tab:selected { 
    background: #4d4d4d; 
    color: #fff; 
    border-bottom: 5px solid #E36C74; 
    /* 선택 강조 테두리는 유지 */ 
    border-left: 1px solid #000000; 
    /* 추가: 좌우 테두리 유지 */ 
    border-right: 1px solid #000000; 
} /* 마우스 호버 */ 
QTabBar::tab:hover { 
    background: #505050; 
} 
/*------------------------------------------------------------------------------------------------------------------------*/ 



/*##########################################################스크롤바 스타일##################################################*/ 
/* 수직 스크롤바 */ 
QScrollBar:vertical { 
    background: #2b2b2b; 
    width: 6px; 
    margin: 0px; 
} 
QScrollBar::handle:vertical { 
    background: #E36C74; 
    border-radius: 3px; 
    min-height: 20px; 
} 
QScrollBar::handle:vertical:hover { 
    background: #E36C74; 
} 
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical { 
    background: none; height: 0px; 
} 
/* 수평 스크롤바 */ 
QScrollBar:horizontal { 
    background: #2b2b2b; 
    height: 6px; 
    margin: 0px; 
} 
QScrollBar::handle:horizontal { 
    background: #E36C74; 
    border-radius: 3px; 
    min-width: 20px; 
}
QScrollBar::handle:horizontal:hover {
    background:rgb(236, 138, 145); 
} 
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal { 
    background: none; width: 0px; 
} 
/* 스크롤바 트랙 여백 */ 
QScrollBar::add-page, QScrollBar::sub-page { 
    background: none; 
} 
QSizeGrip { 
    image: none; 
    /* 그림 없애기 (또는 대체 이미지 설정) */ 
    width: 12px; 
    height: 12px; 
    margin: 0px 4px 4px 0px; 
    /* 위치 미세 조정 */ 
    background: transparent; 
    /* 배경 투명 */ 
} 
/*------------------------------------------------------------------------------------------------------------------------*/ 


/*##########################################################스플리터 스타일##################################################*/ 
QSplitter { 
    background-color: #E36C74; 
    margin: 5px 
} 
/* 가로 splitter의 핸들 (중간 드래그 바) */ 
QSplitter::handle:horizontal { 
    background-color: #E36C74; 
    height: 30px; 
    /* 수평 splitter는 높이로 설정 */ 
} 
/* 세로 splitter의 핸들 (중간 드래그 바) */ 
QSplitter::handle:vertical { 
    background-color: #E36C74; 
    width: 30px; 
    /* 수직 splitter는 너비로 설정 */ 
} 
/* 드래그 시 하이라이트 */ 
QSplitter::handle:hover { 
    background-color: #E36C74; 
} 
