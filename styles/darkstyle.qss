/*##########################################################캘린더 스타일##################################################*/ 
CalendarWidget QToolButton { 
    height: 60px; 
    width: 150px; 
    color: white; 
    font-size: 10px; 
    icon-size: 56px, 56px; 
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop: 0 #cccccc, stop: 1 #333333); 
} 
QCalendarWidget QMenu { 
    width: 150px; 
    left: 20px; 
    color: white; 
    font-size: 10px; 
    background-color: rgb(100, 100, 100); 
} 
QCalendarWidget QSpinBox { 
    width: 70px; 
    font-size: 14px; 
    color: #e0e0e0; 
    background-color: #2b2b2b;
    border: 1px solid #444; 
    border-radius: 4px; 
    padding-right: 15px; 
    /* 텍스트와 버튼 간격 */ 
    selection-background-color: #555; 
    selection-color: white; 
} 
/* 위, 아래 버튼 */ 
QCalendarWidget QSpinBox::up-button, QCalendarWidget QSpinBox::down-button { 
    width: 14px; 
    height: 10px; 
    subcontrol-origin: border; 
    background-color: #3a3a3a;
    border-left: 1px solid #444; 
    padding: 1px; 
} 
/* hover 효과 */ 
QCalendarWidget QSpinBox::up-button:hover, QCalendarWidget QSpinBox::down-button:hover { 
    background-color: #505050;
} 
/* 화살표 크기만 조정 (기본 Qt 아이콘 사용) */ 
QCalendarWidget QSpinBox::up-arrow, QCalendarWidget QSpinBox::down-arrow { 
    width: 8px; 
    height: 8px; 
} 
/* header row */ 
QCalendarWidget QWidget { 
    alternate-background-color: rgb(56, 56, 56); 
}
/* normal days */ 
QCalendarWidget QAbstractItemView:enabled { 
    font-size: 12px; 
    color: rgb(255, 255, 255); 
    background-color: rgb(64, 64, 64); 
    selection-background-color: transparent;
    /* 배경 투명 */ 
    selection-color: rgb(255, 230, 0); 
} 
/* 선택된 아이템 테두리 효과 흉내 */ 
QCalendarWidget QAbstractItemView:item:selected { 
    background-color: rgba(177, 177, 177, 50); 
    /* 연한 하이라이트 */ 
    border: 2px solid rgb(67, 250, 12); 
    /* 테두리 강제 지정 */ outline: none; 
} 
QCalendarWidget QWidget#qt_calendar_navigationbar { 
    background-color: #2b2b2b; 
} 
QCalendarWidget QAbstractItemView:disabled { 
    color: rgb(64, 64, 64); 
} 
